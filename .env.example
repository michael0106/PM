# DAP 环境配置文件
# 复制此文件为 .env 并根据实际环境修改配置

# ====================
# 应用配置
# ====================
NODE_ENV=development
PORT=8080
API_VERSION=v1

# ====================
# 数据库配置
# ====================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=dap_db
DB_USER=dap_user
DB_PASSWORD=your_db_password
MYSQL_ROOT_PASSWORD=your_root_password

# ====================
# Redis配置
# ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ====================
# JWT配置
# ====================
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ====================
# RabbitMQ配置
# ====================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=/

# ====================
# 邮件配置
# ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@dap.com

# ====================
# 文件上传配置
# ====================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ====================
# 第三方服务配置
# ====================
# Sumsub KYC服务
SUMSUB_BASE_URL=https://test-api.sumsub.com
SUMSUB_APP_TOKEN=your_sumsub_app_token
SUMSUB_SECRET_KEY=your_sumsub_secret_key

# 支付网关配置
PAYMENT_GATEWAY_URL=https://api.payment.com
PAYMENT_GATEWAY_KEY=your_payment_gateway_key
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret

# ====================
# 安全配置
# ====================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# ====================
# 日志配置
# ====================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14

# ====================
# 监控配置
# ====================
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=admin123

# ====================
# 业务配置
# ====================
# KYC配置
KYC_REQUIRED=true
KYC_AUTO_APPROVE=false
KYC_DOCUMENT_EXPIRY_DAYS=365

# 佣金配置
COMMISSION_PAYMENT_DELAY=30
MIN_DEPOSIT_AMOUNT=100
MAX_COMMISSION_RATE=0.15

# 黑名单国家
BLACKLIST_COUNTRIES=CN,US,IR,KR

# 允许的货币
ALLOWED_CURRENCIES=USD,EUR,GBP,JPY,AUD,CAD

# ====================
# 开发环境配置
# ====================
# 开发环境特定配置
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_CORS=true

# 测试数据
SEED_TEST_DATA=true
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test123456

# ====================
# 生产环境配置
# ====================
# 生产环境特定配置（覆盖上面的开发配置）
# NODE_ENV=production
# DEBUG=false
# ENABLE_SWAGGER=false
# ENABLE_CORS=false
# SEED_TEST_DATA=false

# SSL证书路径
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 域名配置
DOMAIN=dap.com
API_DOMAIN=api.dap.com
ADMIN_DOMAIN=admin.dap.com

# CDN配置
CDN_URL=https://cdn.dap.com
CDN_BUCKET=dap-assets

# ====================
# 备份配置
# ====================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ====================
# 通知配置
# ====================
# Slack通知
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#dap-alerts

# 钉钉通知
DINGTALK_WEBHOOK_URL=https://oapi.dingtalk.com/robot/send?access_token=your_token

# 邮件通知
ALERT_EMAIL=admin@dap.com
ALERT_EMAIL_ENABLED=true

# ====================
# 缓存配置
# ====================
CACHE_TTL=3600
CACHE_PREFIX=dap:
CACHE_ENABLED=true

# ====================
# 队列配置
# ====================
QUEUE_NAME=dap_jobs
QUEUE_CONCURRENCY=5
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# ====================
# API限流配置
# ====================
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=100
API_RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
API_RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# 认证接口限流
AUTH_RATE_LIMIT_WINDOW=60000
AUTH_RATE_LIMIT_MAX=5

# 文件上传限流
UPLOAD_RATE_LIMIT_WINDOW=60000
UPLOAD_RATE_LIMIT_MAX=10